  <!-- sys_roleauthorize -->
  <sql id="Base_Column_List" >
      F_Id, F_ItemType, F_ItemId, 
      F_ObjectType, F_ObjectId, F_SortCode, 
      F_CreatorTime, F_CreatorUserId
  </sql>
  
 <select id="queryMenuByRoleId" resultMap="BaseResultMap" parameterType="java.util.Map" >
    select 
    <include refid="Base_Column_List" />
    from sys_roleauthorize 
    <where>
    	F_DeleteMark  = 0
    	<if test ="roleId !=null and roleId !='' ">
    		and F_ObjectId = #{roleId,jdbcType=VARCHAR} 
    	</if>	
    	<if test ="FId !=null and FId !='' ">
    		and F_ItemId = #{FId,jdbcType=VARCHAR} 
    	</if>
    	
    </where>
    
  </select>
  
  
  
  <insert id="addSysRoleauthorize" parameterType="com.wt.overflow.bean.SysRoleauthorize">
