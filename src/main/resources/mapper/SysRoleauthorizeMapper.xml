<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wt.overflow.dao.SysRoleauthorizeMapper" >
  <resultMap id="BaseResultMap" type="com.wt.overflow.bean.SysRoleauthorize" >
    <result column="F_Id" property="fId" jdbcType="VARCHAR" />
    <result column="F_ItemType" property="fItemtype" jdbcType="INTEGER" />
    <result column="F_ItemId" property="fItemid" jdbcType="VARCHAR" />
    <result column="F_ObjectType" property="fObjecttype" jdbcType="INTEGER" />
    <result column="F_ObjectId" property="fObjectid" jdbcType="VARCHAR" />
    <result column="F_SortCode" property="fSortcode" jdbcType="INTEGER" />
    <result column="F_CreatorTime" property="fCreatortime" jdbcType="TIMESTAMP" />
    <result column="F_CreatorUserId" property="fCreatoruserid" jdbcType="VARCHAR" />
