    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="fId != null">
        F_Id,
      </if>
      <if test="fItemtype != null">
        F_ItemType,
      </if>
      <if test="fItemid != null">
        F_ItemId,
      </if>
      <if test="fObjecttype != null">
        F_ObjectType,
      </if>
      <if test="fObjectid != null">
        F_ObjectId,
      </if>
      <if test="fSortcode != null">
        F_SortCode,
      </if>
      <if test="fCreatortime != null">
        F_CreatorTime,
      </if>
      <if test="fCreatoruserid != null">
        F_CreatorUserId,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="fId != null">
        #{fId,jdbcType=VARCHAR},
      </if>
      <if test="fItemtype != null">
        #{fItemtype,jdbcType=INTEGER},
